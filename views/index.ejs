<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head") %>
        <title>Homepage</title>
</head>

<body>
    <%- include("./partials/nav") %>
        <div class="container">
            <div class="row row-cols-4">
                <% blogs.forEach((blog)=> { %>
                    <div class="col mt-3">
                        <% if (locals.user) { %>
                            <div class="card col" style="width: 18rem;">
                                <img src="<%= blog.coverImageURL %>" alt="imageeeeeeeeee">
                                <p>
                                    <%= blog.title %>
                                </p>
                                <div class="card-body">
                                    <p class="card-text">
                                        <%= blog.body %>
                                    </p>
                                </div>
                                <a class="btn btn-outline-info mt-3" href="/blog/<%= blog._id %>">View full blog</a>
                            </div>
                            <% } %>
                    </div>
                    <% }) %>
            </div>
        </div>

        <%- include("./partials/script") %>
</body>

</html>